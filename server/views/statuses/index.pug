extends ../layouts/application.pug

block content
  a.nav-link(href=route('newTaskStatus'))= t('views.taskStatus.create')
  table.table.table-striped
    thead
      tr
        th= t('views.taskStatus.id')
        th= t('views.taskStatus.name')
        th= t('views.taskStatus.createdAt')
        th= t('views.taskStatus.actions')
    tbody
      each taskStatus in taskStatuses
        tr
          td= taskStatus.id
          td= taskStatus.name
          td= formatDate(taskStatus.createdAt)
          td
            a(href=route('editTaskStatus', { id: taskStatus.id }))= t('views.taskStatus.edit.action')
            +buttonTo(route('taskStatus', { id: taskStatus.id }), 'delete')(class="btn btn-link" value=t('views.taskStatus.delete.action'))
